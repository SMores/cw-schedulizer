<% provide(:title, "New Story") %>
<h1>Add a new news story</h1>

<div class="row">
  <div class="span6 offset3">
    <%= form_for(@news_story) do |f| %>

      <%= render 'shared/error_messages', object: f.object %>

      <%= f.label :title %>
      <%= f.text_field :title %>

      <%= f.label :snippet %>
      <%= f.text_area :snippet %>

      <%= f.label :url %>
      <%= f.text_field :url %>

      <br>
      <%= f.submit "Add story", class: "btn btn-large btn-primary" %>

    <% end %>
  </div>
</div>