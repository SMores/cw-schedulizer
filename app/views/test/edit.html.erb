<% @test = Test.find(1) %>
<%= form_for(@test) do |f| %>

  <%= render 'shared/error_messages', object: f.object %>

  <% if @test.testingPeriod %>
    <%= f.hidden_field :link, value: "https://drive.google.com/file/d/0BzFz-9ar4j2pZWRnY082ZWdWWlZrSXZZY2Z5bU9mVXcyWkhj/edit?usp=sharing" %>
    <%= f.hidden_field :testingPeriod, value: false %>

    <%= f.submit "End Testing", class: "btn btn-large" %>

  <% else %>
    <%= f.hidden_field :link, value: "https://docs.google.com/forms/d/1yxRfZLT5qK_JCFszemmlZoijQLaJTo1lTg-HeHkcj-Q/viewform" %>
    <%= f.hidden_field :testingPeriod, value: true %>

    <%= f.submit "Begin Testing", class: "btn btn-primary btn-large" %>

  <% end %>
<% end %>